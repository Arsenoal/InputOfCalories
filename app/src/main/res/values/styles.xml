<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="regEditTextStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.Material.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="AuthButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:paddingTop">@dimen/padding_very_small</item>
        <item name="android:paddingBottom">@dimen/padding_very_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppAuthEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">45dp</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_transparent</item>
        <item name="backgroundTint">@color/white</item>
    </style>

</resources>
