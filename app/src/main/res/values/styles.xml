<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="regEditTextStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.Material.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="AppButtonStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/auth_button_background</item>
    </style>

    <style name="AppAuthEditTextStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">45dp</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:background">@drawable/background_rounded_white</item>
    </style>

</resources>
